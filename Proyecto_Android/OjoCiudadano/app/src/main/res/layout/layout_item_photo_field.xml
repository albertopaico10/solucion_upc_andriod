<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_take_photo"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="130dp" android:layout_marginTop="20dip">

    <ImageButton
        android:id="@+id/btn_take_photo_n"
        style="@style/btnGreyStyleOjoVial"
        android:layout_width="50dp"
        android:layout_height="40dp" android:layout_gravity="left" android:background="#ffffffff"/>
    <ImageView
        android:id="@+id/iv_photo_n"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"/>

</LinearLayout>